@model IEnumerable<TestTask.Order>
@{
    ViewData["Title"] = "List of orders";
}
<h3>List of orders</h3>
<table class="table-condensed" width="100%">
    <tr>
        <td>Order number</td>
        <td>Sender's city</td>
        <td>Sender's address</td>
        <td>Recipient's city</td>
        <td>Recipient's address</td>
        <td>Cargo weight</td>
        <td>Date of cargo pickup</td>
        <td></td>
    </tr>
    @foreach (var order in Model)
    {
        <tr>
            <td>@order.Id</td>
            <td>@order.SenderCity</td>
            <td>@order.SenderAddress</td>
            <td>@order.AddresseeCity</td>
            <td>@order.AddresseeAddress</td>
            <td>@order.Weight</td>
            <td>@order.Date</td>
        </tr>
    }
    <tr><td><a asp-controller="Home" asp-action="Buy" class="btn btn-success">Place an order</a></td></tr>
</table>